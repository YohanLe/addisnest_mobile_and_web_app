# Addinest Real Estate Platform - Environment Variables
# Copy this file to .env and update the values with your actual configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/addinest_real_estate
# For production, use your MongoDB Atlas or other provider connection string
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/addinest_real_estate

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (if applicable)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@addinest.com

# File Upload Configuration
MAX_FILE_SIZE=5000000
FILE_UPLOAD_PATH=./uploads

# Payment Integration (if applicable)
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_API_SECRET=your_payment_api_secret

# Feature Flags
ENABLE_PROPERTY_EDIT_FIX=true
ENABLE_ADDRESS_FIX=true
ENABLE_IMAGE_FORMAT_FIX=true
